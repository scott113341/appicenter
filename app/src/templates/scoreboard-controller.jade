include partials/navigation

div.container-fluid
  div.row
    div.col-lg-12
      h1 Scoreboard Controller1
      h2 Currently displaying: <span>{{current_view.name}}</span>

      div.btn-group
        label.btn.btn-default(ng-repeat="view in views",ng-click="$parent.current_view=view",ng-class="{active:$parent.current_view.id==view.id}") {{view.name}}

      h2 Instagram Photos
      div
        img.dn-fade-up(ng-repeat="(key,media) in photos | orderBy:key",src="{{media.images.thumbnail.url}}",ng-click="$parent.current_photo = media")
